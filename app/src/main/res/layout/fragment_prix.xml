<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrixFragment"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/prixa"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:background="@drawable/e1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/prixdachat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            android:text="Prix d'achat"
            android:textColor="@color/White" />


        <TextView
            android:id="@+id/marge"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/prixa"
            android:layout_marginTop="10dp"
            android:background="@drawable/e1"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/marg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prixdachat"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="55dp"
            android:text="Marge"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/prixv"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/marge"
            android:layout_marginTop="10dp"
            android:background="@drawable/e1"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/prixvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marg"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="95dp"
            android:text="Prix de vente"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/remisec"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/prixv"
            android:layout_marginTop="15dp"
            android:background="@drawable/e1"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/remiseclient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prixvent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="140dp"
            android:text="Remise client"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/prixr"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/remisec"
            android:layout_marginTop="10dp"
            android:background="@drawable/e1"
            android:layout_marginLeft="3dp"
            />


        <TextView
            android:id="@+id/prixavec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remiseclient"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="180dp"
            android:text="Prix avec remise"
            android:textColor="@color/White" />
        <TextView
            android:id="@+id/e1"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/e2"
            android:layout_toRightOf="@id/prixa"
            android:textColor="@color/Blue"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/e2"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/marge"
            android:textColor="@color/Blue"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_below="@+id/e1"
            android:layout_marginTop="10dp"
            android:background="@drawable/e2"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/e3"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/prixv"
            android:layout_below="@id/e2"
            android:textColor="@color/Blue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/e2"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/e4"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/remisec"
            android:layout_below="@id/e3"
            android:textColor="@color/Blue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/e2"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/e5"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_below="@id/e4"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/prixr"
            android:background="@drawable/e2"
            android:textAlignment="center"
            android:textColor="@color/Blue" />
    </RelativeLayout>
</FrameLayout>

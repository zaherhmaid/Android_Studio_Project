<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Stock"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/superieur"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock"
        android:layout_marginTop="17dp"
        android:numeric="integer"
        android:textColor="@color/Black"
        />
    <ImageView
        android:id="@+id/sup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/stock"
        android:layout_toRightOf="@id/superieur"
        android:layout_marginTop="28dp"
        android:src="@drawable/sup"
        />

    <EditText
        android:id="@+id/inferieur"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/sup"
        android:textColor="@color/Black"
        android:numeric="integer"
        />

    <ImageView
        android:id="@+id/inf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/stock"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/inferieur"
        android:src="@drawable/inf"
        />
    <TextView
        android:id="@+id/famille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Famille"
        android:layout_below="@id/superieur"
        android:layout_marginTop="20dp"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/superieur"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/famille"
        android:backgroundTint="@color/Blue"
        ></android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/sfamille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/superieur"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/s1"
        android:text="Sous_Famille" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/superieur"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/sfamille"
        android:backgroundTint="@color/Blue"
        ></android.support.v7.widget.AppCompatSpinner>

</RelativeLayout>

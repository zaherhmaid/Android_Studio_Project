<?xml version="1.0" encoding="utf-8"?>
   <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/line1"
                android:layout_below="@+id/cardd"
                android:layout_marginTop="16dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/np"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nomprenom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nom PrÃ©nom"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/DarkGrey"
                        android:textColorHint="@color/Blue"
                        android:backgroundTint="@color/DarkGrey"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Login"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/DarkGrey"
                        android:textColorHint="@color/Blue"
                        android:backgroundTint="@color/DarkGrey"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/amp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/amot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ancien Mot De Passe"
                        android:textSize="16sp"
                        android:textColor="@color/DarkGrey"
                        android:textColorHint="@color/Blue"
                        android:backgroundTint="@color/DarkGrey"
                        android:inputType="textPassword"
                        />

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nmot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nouveau Mot De Passe"
                        android:textSize="16sp"
                        android:textColor="@color/DarkGrey"
                        android:textColorHint="@color/Blue"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/DarkGrey"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cmot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmation Mot De Passe"
                        android:textSize="16sp"
                        android:textColor="@color/DarkGrey"
                        android:textColorHint="@color/Blue"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/DarkGrey"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/Blue"
                    app:errorEnabled="true"
                    >

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        />

                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/line17"
                    >
                    <Button
                        android:id="@+id/ann"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_conn"
                        android:text="Annuler"
                        android:textStyle="bold"
                        android:textColor="@color/Blue" />
                    <Button
                        android:id="@+id/mod"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/btn_ajout"
                        android:text="Modifier"
                        android:textStyle="bold"
                        android:textColor="@color/White" />

                </LinearLayout>-->

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
<android.support.design.widget.NavigationView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="start"
app:headerLayout="@layout/header"
android:id="@+id/navigationview"
app:menu="@menu/drawermenu"
app:itemTextColor="@color/drawer_font">

</android.support.design.widget.NavigationView>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center|bottom"
android:layout_below="@+id/GridLayout1"
android:layout_marginTop="36dp">
<ImageView
    android:layout_width="80dp"
    android:layout_height="35dp"
    android:src="@drawable/bas" />
</LinearLayout>

    </android.support.v4.widget.DrawerLayout>



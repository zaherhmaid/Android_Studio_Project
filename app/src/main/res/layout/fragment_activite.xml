<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:context=".ActiviteFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/transitions_container"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grid"
              >
           <TextView
              android:id="@+id/du"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:text="Du"
              android:textColor="@color/Blue"
              android:textSize="20dp"
               android:layout_column="1"/>
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/du"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/DarkGrey"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_column="1"
                    />
                <ImageView
                    android:id="@+id/calendar1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/date1"
                    android:layout_alignLeft="@+id/date1"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="8dp"
                    android:onClick="setDate"
                    android:src="@drawable/date"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                 />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Au"
                    android:id="@+id/au"
                    android:textColor="@color/Blue"
                    android:layout_column="2"
                    android:textSize="20dp" />
             <TextView
                    android:id="@+id/date2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toLeftOf="@+id/calendar2"
                 android:layout_marginTop="10dp"
                    android:textColor="@color/DarkGrey" />

           <ImageView
                    android:id="@+id/calendar2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="setDate"
                    android:src="@drawable/date"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
               android:layout_marginLeft="60dp"
               android:layout_alignStart="@+id/date2"
               android:layout_alignLeft="@+id/date2"
               />
      </GridLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus"
                android:layout_centerHorizontal="true"
                android:choiceMode="multipleChoice"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textColor="@color/Blue"
                android:visibility="gone"
                />
          <TextView
              android:id="@+id/ac1"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_below="@id/grid"
              android:background="@drawable/activ"
              android:layout_marginTop="10dp"
              />



 <ImageView
          android:id="@+id/plus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/grid"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:src="@drawable/groupe1206" />

     <TextView
          android:id="@+id/acha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/grid"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="27dp"
          android:layout_toRightOf="@id/plus"
          android:text="Achats:"
          android:textColor="@color/Blue"
          android:textSize="20dp"
          />
   <TextView
          android:id="@+id/achat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/grid"
          android:layout_marginLeft="116dp"
          android:layout_marginTop="27dp"
          android:layout_toRightOf="@id/plus"
          android:textColor="@color/Blue"
          android:textSize="20dp" />



      <TextView
          android:id="@+id/ac2"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_below="@id/ac1"
          android:layout_marginTop="14dp"
          android:background="@drawable/activ"
          />

      <ImageView
          android:id="@+id/plus2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/plus"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="50dp"
          android:src="@drawable/groupe1206"
          />

      <TextView
          android:id="@+id/vent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/grid"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="115dp"
          android:layout_toRightOf="@id/plus2"
          android:text="Ventes:"
          android:textColor="@color/Blue"
          android:textSize="20dp"
          />

      <TextView
          android:id="@+id/vente"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/grid"
          android:layout_marginLeft="116dp"
          android:layout_marginTop="115dp"
          android:layout_toRightOf="@id/plus2"
          android:textColor="@color/Blue"
          android:textSize="20dp" />


      <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/plus2"
          android:layout_centerHorizontal="true"
          android:choiceMode="multipleChoice"
          android:scrollbars="vertical"
          android:textAlignment="center"
          android:textColor="@color/Blue"
          android:visibility="gone"
          />
      <TextView
          android:id="@+id/ac3"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_below="@id/ac2"
          android:layout_marginTop="15dp"
          android:background="@drawable/activ"
          />

      <ImageView
          android:id="@+id/plus3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ac2"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:src="@drawable/groupe1206"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ac2"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="27dp"
          android:layout_toRightOf="@id/plus2"
          android:text="Marge dégagée"
          android:textColor="@color/Blue"
          android:textSize="20dp"
          />
      <TextView
          android:id="@+id/act3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/plus3"
          android:textAlignment="center"
          android:layout_centerHorizontal="true"
          android:visibility="invisible"
          />


      <TextView
          android:id="@+id/ac4"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_below="@id/ac3"
          android:layout_marginTop="15dp"
          android:background="@drawable/activ"
          />

      <ImageView
          android:id="@+id/plus4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ac3"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:src="@drawable/groupe1206" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ac3"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="27dp"
          android:layout_toRightOf="@id/plus4"
          android:text="Analyse"
          android:textColor="@color/Blue"
          android:textSize="20dp"
          />
      <TextView
          android:id="@+id/act4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/plus4"
          android:textAlignment="center"
          android:layout_centerHorizontal="true"
          android:visibility="invisible"
          />

        </RelativeLayout>
    </FrameLayout>
</ScrollView>
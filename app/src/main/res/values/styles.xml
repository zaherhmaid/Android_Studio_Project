<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkBlue</item>
        <item name="colorPrimaryDark">@color/Blue</item>
        <item name="colorAccent">@color/Blue</item>
        <item name="android:textColorPrimary">@color/clearWhite</item>
        <item name="colorControlNormal">@color/clearWhite</item>
        <item name="android:textColor">@color/Blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.TextAppearance.AppCompat." parent="AppTheme">
        <item name="colorPrimary">@color/DarkBlue</item>
        <item name="colorPrimaryDark">@color/Blue</item>
        <!--<item name="colorAccent">@color/clearWhite</item>-->
        <item name="android:textColor">@color/DarkBlue</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/DarkGrey</item>
    </style>

    <style name="text">
        <item name="colorPrimary">@color/White</item>
        <item name="colorAccent">@color/Blue</item>
        <item name="android:colorPrimaryDark">@color/Blue</item>

    </style>
</resources>